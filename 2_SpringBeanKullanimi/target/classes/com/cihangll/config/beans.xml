<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="person" class="com.cihangll.model.Person">
		<constructor-arg name="id" value="100" />
		<constructor-arg name="name" value="name ornek" />
	</bean>

	<bean id="person2" class="com.cihangll.model.Person">
		<constructor-arg index="0" value="200" />
		<constructor-arg index="1" value="index ornek" />
	</bean>

	<bean id="person3" class="com.cihangll.model.Person">
		<constructor-arg type="int" value="300" />
		<constructor-arg type="String" value="type ornek" />
	</bean>

</beans>
